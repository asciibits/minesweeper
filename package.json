{
  "name": "minesweeper2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "tsc && node --no-warnings=ExperimentalWarning --loader ts-node/esm ./node_modules/jasmine/bin/jasmine.js --config=./spec/support/jasmine.json --seed=${RANDOM}",
    "build": "tsc",
    "clean": "rm -rf ./lib/* ./dist/*",
    "prettier-format": "prettier --config .prettierrc '**/*.ts' '**/*.html' '**/*.css' --write",
    "dist": "npx esbuild ./src/ui/index.ts ./src/ui/sidebar.ts ./src/ui/board_id_worker_entry.ts --bundle --minify --outdir=dist && cp ./ui/icon.svg dist/ && npx css-minify -f ./ui/minestyle.css -o dist/ && mv dist/minestyle.min.css dist/minestyle.css && npx html-minifier-terser --collapse-whitespace --remove-comments --minify-js true ./ui/minesweeper.html -o ./dist/minesweeper.html && sed -i -e 's|\\.\\./lib/ui/|./|g' ./dist/minesweeper.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jasmine": "^5.1.4",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "esbuild": "0.20.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jasmine": "^5.1.0",
    "prettier": "^3.1.1",
    "prettier-plugin-jsdoc": "gitlab:gumen/prettier-plugin-jsdoc",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "type": "module",
  "dependencies": {
    "css-minify": "^2.0.0",
    "html-minifier-terser": "^7.2.0"
  }
}
